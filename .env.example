# ADF Pipeline Debugger - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Azure Credentials
# ============================================
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_DATA_FACTORY_NAME=your-data-factory-name

# Azure Service Principal
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# ============================================
# Gemini AI Configuration
# ============================================
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# ============================================
# Gmail SMTP Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient@example.com
# Comma-separated for multiple: user1@example.com,user2@example.com

# ============================================
# Dashboard Configuration
# ============================================
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=5000
DASHBOARD_SECRET_KEY=change-this-to-a-random-string

# ============================================
# Application Settings
# ============================================
# Hours to look back for failures (default: 24)
LOOKBACK_HOURS=24
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
